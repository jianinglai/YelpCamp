<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new campground</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="add new campground" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description of campground" name="description">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="Submit">    
                </div>
            </form>
            <a href="/campgrounds">Go back to campsites</a>
        </div>
    </div>
</div>



