<% include ../partials/header %>

<div class="container">
    <header>
        <div class="jumbotron">
            <div class="container">
                <h1>Find your campground</h1>
                <p>Choose from one of our hand-picked locations</p>
                <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a></p>
            </div>
        </div>
    </header>
        
        
    <div class="row">
        <div class="col-md-12">
            <h3>Our most popular sites</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campsite){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campsite.image %>">
                    <div class="caption">
                        <h4><%= campsite.name %></h4>
                    </div>
                    <div>
                        <a href="/campgrounds/<%= campsite._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

</div>


<% include ../partials/footer %>
